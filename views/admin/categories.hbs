
<h1>Hello categories</h1>

{{#if categories.length}}
  <div class="row">
    {{#each categories}}
      <div class="col-5">
        <div class="card">
          <img src="/images/{{icon}}" class="card-img-top w-50 " alt="{{name}}" width="500" height="200" />
          <div class="card-body">
            <h5 class="card-title"><a href="/admin/categories/{{id}}">{{name}}</a></h5>
          </div>
          <div class="d-flex justify-content-between">
            <a href="/admin/category/edit/{{id}}">Update</a>
            <a href="/admin/category/delete/{{id}}">Delete</a>

          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  <h2>Empty</h2>
{{/if}}